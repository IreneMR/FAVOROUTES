
<img src="../images/hands.jpg" class="hands">

<div class="big-tab">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
  	<% @chains.each do |chain| %>
   	<li role="presentation" class=""><a href="#<%= chain.id %>" aria-controls="<%= chain.id %>" role="tab" data-toggle="tab"><%= chain.name %></a></li>    
  <% end %>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
	  	<% @chains.each do |chain| %><br>
	      <div role="tabpanel" class="tab-pane" id="<%= chain.id %>">
	 			<% chain.userposts.each do |userpost| %>
					<div class="container">
				      <ul class="timeline">
				        <li>
				          <div class="timeline-badge up"><i class="fa fa-thumbs-up"></i></div>
					          <div class="timeline-panel timeline-width">
					            <div class="timeline-heading">
					              <h4 class="timeline-title">User: <%= userpost.user %></h4>
					            </div>
					            <div class="timeline-body">
					              <p>Comment: <%= userpost.comment %></p>
					              <p>City: <%= userpost.address %></p>

					            </div>
					          </div>
				        </li>
				      </ul>
					</div>
				<% end %>	
				<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
				CREATE A NEW POST
				</button>
				<div class="modal fade" id="myModal">
	  				<div class="modal-dialog">
	    				<div class="modal-content">
	      				<div class="modal-header">
	        					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        					<h4 class="modal-title">Modal title</h4>
	      				</div>
	      				<div class="modal-body">
	      					Name: <input type="text" name="<%= chain.id %>" id="user-field"><br>
  								Put here your experience: <textarea form ="testformid" name="<%= chain.id %>" id="comment-field" cols="35" wrap="soft"></textarea><br>
  								City: <input type="text" name="<%= chain.id %>" id="city-field"><br>
  								Save: <input type="submit" name="<%= chain.id %>" id="btn-send">
	      				</div>
	     				</div><!-- /.modal-content -->
	    			</div><!-- /.modal-dialog -->
	  			</div><!-- /.modal -->	
			</div>
		<%end%>
	</div>

 </div>

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2">
CREATE A NEW CHAIN
</button>

<div class="modal fade" id="myModal2">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">NEW CHAIN</h4>
      </div>
      <div class="modal-body">
      
    	Name: <input type="text" name="" id="name-field"><br>
      Date: <input type="date" name="" id="date-field"><br>
      Description: <textarea form ="testformid" name="" id="description-field" cols="35" wrap="soft"></textarea><br>
      Save: <input type="submit" name="" id="button-send">     
      </div>
      


    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

</div><!-- /.modal -->



