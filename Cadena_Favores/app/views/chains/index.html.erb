<div class="big-tab">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
  	<% @chains.each do |chain| %>
   	<li role="presentation" class=""><a href="#<%= chain.id %>" aria-controls="<%= chain.id %>" role="tab" data-toggle="tab"><%= chain.name %></a></li>    
  <% end %>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
	  	<% @chains.each do |chain| %><br>
	      <div role="tabpanel" class="tab-pane" id="<%= chain.id %>">
	 			<% chain.userposts.each do |userpost| %>
					<div class="container">
				      <ul class="timeline">
				        <li>
				          <div class="timeline-badge up"><i class="fa fa-thumbs-up"></i></div>
					          <div class="timeline-panel timeline-width">
					            <div class="timeline-heading">
					              <h4 class="timeline-title">User: <%= userpost.user %></h4>
					            </div>
					            <div class="timeline-body">
					              <p>Comment: <%= userpost.comment %></p>
					              <p>City: <%= userpost.address %></p>
					            </div>
					          </div>
				        </li>
				      </ul>
					</div>
				<% end %>	
				<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
				CREATE A NEW POST
				</button>
				<div class="modal fade" id="myModal">
	  				<div class="modal-dialog">
	    				<div class="modal-content">
	      				<div class="modal-header">
	        					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        					<h4 class="modal-title">Modal title</h4>
	      				</div>
	      				<div class="modal-body">
	        					<%= text_field_tag :user, nil, id: nil, name: chain.id, class: "user-field", :placeholder => "Name", size: 40 %><br>
								<%= text_area_tag :comment, nil, id: nil, name: chain.id, class: "comment-field", :placeholder => "Put here your experience", size: '30x3' %><br>
								<%= text_field_tag :address, nil, id: nil, name: chain.id, class: "city-field", :placeholder => "City", size: 40 %><br>
	      				</div>
	     					<div class="modal-footer">
	        					<button type="button" class="btn-send" name="<%=chain.id %>" >Send!</button>
	      				</div>
	      			</div><!-- /.modal-content -->
	    			</div><!-- /.modal-dialog -->
	  			</div><!-- /.modal -->	
			</div>
		<%end%>
	</div>

 </div>


